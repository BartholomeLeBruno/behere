<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#2A2E43"
    tools:context=".MarketProfilActivity">

   <android.support.constraint.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:id="@+id/linearLayout"
           android:layout_width="0dp"
           android:layout_height="450dp"
           android:layout_marginEnd="8dp"
           android:background="@drawable/stylish"
           android:orientation="vertical"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="1.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/tvNamePerson"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="8dp"
           android:layout_marginTop="8dp"
           android:layout_marginEnd="8dp"
           android:text="Sarah Croche"
           android:textAlignment="center"
           android:textColor="#FFFFFF"
           android:textSize="40sp"
           android:textStyle="bold"
           app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
           app:layout_constraintEnd_toEndOf="@id/linearLayout"
           app:layout_constraintStart_toStartOf="@+id/linearLayout"
           app:layout_constraintTop_toTopOf="@+id/linearLayout" />

       <TextView
           android:id="@+id/tvFriends"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginEnd="8dp"
           android:layout_marginBottom="8dp"
           android:background="#2A2E43"
           android:text="125 /nFriends"
           android:textColor="#FFFFFF"
           android:textSize="25sp"
           app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
           app:layout_constraintEnd_toStartOf="@+id/tvGroups"
           app:layout_constraintTop_toBottomOf="@+id/tvNamePerson" />

       <TextView
           android:id="@+id/tvGroups"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginEnd="64dp"
           android:layout_marginBottom="8dp"
           android:background="#2A2E43"
           android:text="12 /nGroups"
           android:textColor="#FFFFFF"
           android:textSize="25sp"
           app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/tvNamePerson" />

       <android.support.design.widget.TabLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@+id/linearLayout"
           android:layout_marginEnd="8dp"
           android:layout_marginStart="8dp"
           >

           <android.support.design.widget.TabItem
               android:id="@+id/tabEdit"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="EDIT" />

           <android.support.design.widget.TabItem
               android:id="@+id/tabWall"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="WALL" />
       </android.support.design.widget.TabLayout>


   </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>